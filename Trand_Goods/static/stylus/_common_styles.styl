.logo
	background linear-gradient(90deg, rgb(117, 122, 255), rgb(223, 119, 255));
	-webkit-background-clip text
	color transparent
	span
		display block
		text-transform uppercase
		margin-bottom 10px
		font-family boldestFont		
		&:last-child
			margin-bottom 0

.gray_bg
	background-color grayColor			


h1
	width 100%
	margin-bottom 100px
	padding 0 10px
	line-height 70px
	color white
	font-size 48px
	font-family boldFont
	text-align center

.open_form_wrap
	position relative
	width 95%
	max-width 380px
	height 290px
	margin 0 auto
	padding 40px
	background-color rgba(255,255,255,.2)
	border-radius 25px

.g-input
	display block
	width 100%
	background-color white
	color grayTextColor
	height 50px
	line-height 50px
	padding 0 25px
	margin-bottom 30px
	border-radius 30px
	border none

.open_form_banner
	display block	

.open_form_sucess
		display none
		text-align center
		color white
		line-height 30px
		&:before
			content ''
			display block
			sprite($s-succes_form)
			margin 0 auto 20px


.g-btn
	display block
	outline none
	width 100%
	height 50px
	line-height 44px
	text-align center
	color white
	border-radius 30px
	border none
	box-shadow 0px 6px 12px 5px rgba(0,0,0,0.2)
	background linear-gradient(90deg, rgb(117, 122, 255), rgb(223, 119, 255));
	cursor pointer
	&.g-btn--dark
		background violetBgColor 

.form_title
	font-size 24px
	line-height 40px
	display block
	text-align center
	margin-bottom 25px
	font-family mediumFont		

.g_list	
	li
		position relative
		padding-left 20px
		font-size 18px
		line-height 30px
		margin-bottom 10px
		&:after
			content ''
			display block
			position absolute
			top 10px
			left 0
			width 6px
			height 6px
			border-radius 50%
			background-color blueColor	

.section_title
	font-size 32px
	font-family boldFont
	text-align center
	&:after
		content ''
		display block
		width 80px
		height 10px
		margin 40px auto
		background linear-gradient(90deg, rgb(117, 122, 255), rgb(223, 119, 255));
		border-radius 5px

.why_content
	background-color white
	padding 80px 80px 20px
	border-radius 25px
	.g_list
		li
			margin-bottom 30px
			&:last-child
				margin-bottom 
				
				
.slick-initialized .slick-slide
	outline none

	