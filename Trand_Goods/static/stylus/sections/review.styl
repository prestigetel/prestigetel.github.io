.review
	padding 60px 0

.review_item_content
	width 100%
	max-width 960px
	margin 0 auto
	iframe
		width 100%
		height auto
		min-height 500px

.review_slider_next
	sprite($s-review_arrow_next)
	right 0

.review_slider_prev
	sprite($s-review_arrow_prev)
	left 0

.review_slider
	position relative
	.slick-arrow
		position absolute
		top 50%
		margin-top -30px
		z-index 2
		cursor pointer



