.header_top
    padding 25px 0
    border-bottom: 1px solid lightGrayColor
    .container
        overflow hidden
.header_social
    float right
    li
        display inline-block
        margin-right 15px
        &:last-child
            margin-right 0
.header_contacts
    float left
 .header-social_link--fb
     &:before
         content ""
         display inline-block
         sprite($s-fb)
 .header-social_link--tw
     &:before
         content ""
         display inline-block
         sprite($s-tw)
 .header-social_link--google
     &:before
         content ""
         display inline-block
         sprite($s-google)
 .header-social_link--instagramm
     &:before
         content ""
         display inline-block
         sprite($s-instagramm)         
        
.header_mail
    &:before
        content ""
        display inline-block
        margin-right:10px
        sprite($s-header_mail)
.header_phone
    &:before
        content ""
        display inline-block
        margin-right:10px
        margin-left:20px
        sprite($s-header_phone)
.header_logo
    width 118px
    height 39px
.header_bottom
    padding 40px 0
    border-bottom 1px solid lightGrayColor
    
.header_nav
    li
        display inline-block        
        margin-right 45px
        &:last-child
            margin-right 0

                     
    a    
        display inline-block
        width 100%
        height 100%
        font-size 1.143rem
        &.active,
        &:hover
            color orangeColor
        
       
 .touch_menu,
 .touch_icons
      display none
      width 100%
      height 100%
      font-size 1.143rem
      &.active,
      &:hover
          color orangeColor
     
            
.header_logo,
.header_nav
    display inline-block   
.header_logo
    margin-right 80px
.header_nav
    vertical-align middle
.header_search_form
    display none
.header_action
    width 100%
    max-width 130px
    float right
.header_search_icon,
.header_user_icon,
.header_basket_icon
    display block
    cursor pointer
.header_user_icon
    sprite($s-header_user_icon)
.header_search_icon
    sprite($s-header_search_icon)
.header_basket_icon
    sprite($s-header_basket_icon) 
.header_action
    float right
    text-align right
    padding-top 10px
 .header_search,
 .header_user,
 .header_basket
     display inline-block
     vertical-align middle
     margin-right 25px
     

.header_basket
    position relative
    margin-right 0
         
.header_basket_number
    position absolute
    background-color blueColor
    color white
    font-size .714rem
    width 19px
    height 19px
    display block
    text-align center
    border-radius 50%
    padding-top 5px
    top -20px
    left 3px
	
header
	background-color white
     
     
