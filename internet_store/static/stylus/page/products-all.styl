.all_products
	padding-top 120px
	.container
		overflow hidden

.all_products_filter
	float left
	width 100%
	max-width 270px

.filter_item
	background-color #fff
	padding 40px 30px
	margin-bottom 30px

.filter_title
	display block
	color orangeColor
	font-family extraBoldFont
	font-size 1.286 rem
	margin-bottom 40px
.filter_line
	margin-bottom 35px
	&:last-child
		margin-bottom 0
	label	
		font-family boldFont
		font-size 1.143 rem
		cursor pointer
	input[type="radio"]
		display none
		&:checked
			&+label
				color orangeColor
	input[type="range"]
		width 100%
.checkbox
	position relative
	display block
	padding-left 40px		
	input[type="checkbox"]
		display none
		&:checked
			&+.custom_checkbox
				&:before
					border 4px solid orangeColor
	.custom_checkbox
		position absolute
		left 0				
		&:before
			content ''
			display inline-block
			width 15px
			height 15px
			background-color mainBgColor
				

.filter_line--price
	overflow hidden
	span
		font-family semibold
		font-size 1.143 rem
		padding-right 5px
	input
		width 45px
		border none
		background-color mainBgColor
		p
.filter_price_from
	float left
	width 45%

.filter_price_to
	float right
	width 45%	

.products_show
	float right
	width 100%
	max-width 870px
	.product_item
		margin-right 30px
		&:nth-child(3n)
			margin-right 0

