.reviews
	padding-bottom 140px
	
	.section_head
		margin-bottom 50px
	
	.slide
		text-align center
		
		
		.slide_icon
			@extend .img_wrapper
			box-shadow 0 0 0 5px mainColor
			
			
			
		
		h4
			color #333
			font-family "RalewayBold", sans-serif;
			margin 30px 0 20px 0
			font-size 1.25em
			text-transform none
			margin-bottom 10px
				
		p
			color #6e7b8b
			margin-bottom 20px
			
		span
			font-size 0.95em
			
			

		
.bx-wrapper
	
	.bx-viewport
		margin 0
		padding 0
		background-color #e5e5e5
		border none
		box-shadow none
		min-height 350px
		height auto
		height 100%
		padding-top 10px		
		left 0	
			
		
.bx-wrapper
	
	.bx-controls-direction
		
		.bx-prev
			background url(../img/general/prev_arrow.png) 0 0 no-repeat
			width 16px
			height 29px
			cursor pointer
			display block
			opacity 0.4
			transform translateY(-50%)
			
			&:hover
				opacity 1
				transition all .25s ease

		.bx-next			
			background url(../img/general/next_arrow.png) 0 0 no-repeat
			width 16px
			height 29px
			cursor pointer
			display block
			transform translateY(-50%)
			
			opacity 0.4
			
			&:hover
				opacity 1

				
				
				
				
		
			
			

	
			
		
			
		
			
			
		
	