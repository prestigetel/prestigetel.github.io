.before
	content ''
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	
	
.after
	content ''	
	width 100%
	height 100%
	position absolute
	
	
.cards
		text-align center
		perspective 600px		
		
		.card
			
			&-off
				transform rotateY(100deg)
				opacity 0
				
			&-on
				opacity 1
				
			transition all 1s ease	
			display inline-block
			vertical-align top
			width 260px
			background-color #2c3949
			margin 0 12px
			color #97a4b2
			font-size 0.9em
			line-height 1.333em
			padding 54px 28px 52px
			margin-bottom 20px
			height 380px
			border-bottom 5px solid #19293b
			
			h4
				color #e5e5e5
				font-family "RalewayBold", sans-serif;
				margin 30px 0 20px 0
				font-size 1.1em
			
			.card_icon
				line-height 118px
				width 118px
				height 118px
				border-radius 50%
				background-color mainColor
				text-align center				
				display inline-block				
				
				img					
					width 75px
					height 75px	
	
	
.buttons
	display inline-block
	border none
	background-color mainColor
	color #000	
	border-bottom 3px solid #b97200
	padding 15px 30px
	font-size 1.467em
	font-family "PFCentroSlabProBold", sans-serif
	margin-top 20px
	margin-bottom 20px
	border-radius 2px
	
	&:hover
		background-color #f8ae37
		text-decoration none
		color #000
		
	&:active
		background-color #e29314
		text-decoration none
		color #000
	&:focus
		text-decoration none
		color #000
		
		
.trans
	 transition all linear .5s
	 
	 
.homesect
	padding 70px 0 0 
	background-color #f9f9f9			
			
	&:before
			content ''
			position absolute
			width 100%
			height 6px		
			z-index 2
			top -6px
			left 0
			background url(../img/general/bah_1.png) repeat-x
			
	&.gray
		background-color #e5e5e5
		
		&:before
			background url(../img/general/bah_3.png) repeat-x
		
		
		
		
			
	&.blue
		background-color #2c3949
		color #f9f9f9
		padding-bottom 60px
		
		h2
			color #f9f9f9
			
		&:before
			background url(../img/general/bah_2.png)
			
			
h2
		text-align center
		position relative
	
		&:after
			position absolute
			content ''
			height 4px
			width 165px
			display inline-block
			background-color mainColor
			bottom -30px
			left 50%
			transform translateX(-50%)
			

			
			
.section_head
	margin-bottom 80px
	
	p
		margin-top 60px
		font-size 1em
		text-align center
		animation-delay .4s
		
	a
		color mainColor
		font-family "RaleweyBold", sans-serif	
		
		
.img_wrapper
	width 118px
	height 118px
	border-radius 50%
	box-shadow 0 0 0 5px #d6d6d6
	background-color #dad9de
	text-align center				
	display inline-block	
	overflow hidden
	
	img
		width 100%
		
		
#callback
	max-width 300px
	margin 0 auto
	position relative
	
	h4
		line-height 1.2em
		text-align center
		font-size 2em
		margin-bottom 15px
		margin-top 15px
	
	
	.mfp-close
		color #fff
		background-color transparent
		border none
		top -35px
		right -8px