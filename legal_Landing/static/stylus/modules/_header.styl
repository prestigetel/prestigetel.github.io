.sandvich_top 
	 display inline-block
	 vertical-align middle
	 margin-right 15px
	 position relative
	 width 48px
	 height 48px	 
	 cursor pointer
	 
	 &.active		
		.sandvich_line--top
			top 21px
			transform rotate(45deg)
			
	
		.sandvich_line--middle
			opacity 0
			
	
		.sandvich_line--bottom
			top 21px
			transform rotate(-45deg)
	 
	 
	 
.sandvich_line 
	 position absolute
	 height 2px
	 width 25px
	 background-color #fff
	 margin-left 11px
	 @extend .trans
	
	 
	 
			
			
.sandvich_line--top
	top 13px
	
.sandvich_line--middle
	top 21px
