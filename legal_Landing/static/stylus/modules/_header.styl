	top 29px
	
	
.header_wrap	
	margin-top 30px
	
	h1
		margin-top 60px
		color #fff
		border-bottom mainColor 8px solid
		display inline-block
		
	ul
		margin-top 40px
		
		li			
			font-family "RalewaySemiBold", sans-serif
			font-size 1.2em
			line-height 1.8em
			
			a
				position relative
				padding-left 12px
				
				
				&:before
					@extend .before
					background url(../img/general/header_triangle.png) 0 0 no-repeat
					top 0.3em
					left 0
					
					
.header_left
	margin-bottom 100px
	
	
.forms
	background-color rgba(#2d3c4c, .8)
	padding 25px 35px
	font-size 0.867em
	color #97a4b2
	border-bottom 4px solid #1f2a36
	min-width 280px
	margin-bottom 60px
	
	
	h4
		color #fff
		margin-bottom 20px
		font-size 2.133em
		font-family "PFCentroSlabProMedium", sans-serif
		text-transform none
	
	label
		margin 20px 0
		display block
		letter-spacing 1.5px
		
		span
			display block
			margin-bottom 5px
			color #778390
		
	input
		display block
		width 100%
		border none
		box-shadow 0 -3px #1f2a36
		background-color #34465a
		height 45px
		text-indent 10px
		color #fff
		font-size 1.6em
		font-family "PFCentroSlabProMedium", sans-serif
		
		&:focus
			box-shadow 0 -5px #1f2a36
			transition all .5s ease
			background-color #3f5874
	button
		@extend .buttons
			
			

	
	
