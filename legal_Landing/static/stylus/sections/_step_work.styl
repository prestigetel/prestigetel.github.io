.steps_work
	
		&:before
			 background url(../img/general/bah_2.png)		
	
		
		.triangles_container
			font-family "PFCentroSlabProMedium", sans-serif
			font-size 1.2em
			margin-top 20px
			text-align center

			.step_item
				display inline-block
				width 290px
				height 128px
				position relative
				z-index 0
				vertical-align top
				margin-left -40px
				margin-bottom 20px
				transition all .5s ease
				
				&:hover
					transform scale(1.08)
					cursor pointer
					z-index 3
					
					path
						fill-opacity 0 !important
						stroke-opacity 1 !important
				            
               
                
               
                   
              
              
               

				svg
					position absolute
					left 0
					top 0

				.step_content
					position relative
					z-index 1
					text-align right

					img
						width 35px
						height 40px
						position absolute
						top 45px
						left 55px


					span

						&.text
							display inline-block
							width 145px
							margin-top 45px
							margin-right 20px
							text-align left
							line-height 1.333em


						&.number
							position absolute
							display inline-block
							top 38px
							left 100px
							font-size 1.467em

		background-color #2c3949
		color #f9f9f9
		padding-bottom 60px

		h2
			color #f9f9f9
			
					
	

		




